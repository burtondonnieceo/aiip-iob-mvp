{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Backend Dependencies",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "backend/requirements.txt"],
            "group": "build",
            "detail": "Install Python dependencies for backend services"
        },
        {
            "label": "Start Translator Service",
            "type": "shell",
            "command": "python",
            "args": ["backend/translator/main.py"],
            "group": "build",
            "detail": "Start AIIP Translator service on port 8081",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Ledger Service",
            "type": "shell",
            "command": "python",
            "args": ["backend/ledger/main.py"],
            "group": "build",
            "detail": "Start AIIP Ledger service on port 8082",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Gateway Service",
            "type": "shell",
            "command": "python",
            "args": ["backend/gateway/main.py"],
            "group": "build",
            "detail": "Start AIIP Gateway service on port 8080",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Install Frontend Dependencies",
            "type": "shell",
            "command": "npm",
            "args": ["install"],
            "options": {
                "cwd": "${workspaceFolder}/console"
            },
            "group": "build",
            "detail": "Install Node.js dependencies for React console"
        },
        {
            "label": "Start Console Frontend",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "options": {
                "cwd": "${workspaceFolder}/console"
            },
            "group": "build",
            "detail": "Start React console on port 5173",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start All Backend Services",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start Translator Service",
                "Start Ledger Service",
                "Start Gateway Service"
            ],
            "group": "build",
            "detail": "Start all three backend services in parallel"
        },
        {
            "label": "Start Full AIIP Stack",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start All Backend Services",
                "Start Console Frontend"
            ],
            "group": "build",
            "detail": "Start all backend services and frontend console"
        },
        {
            "label": "Setup AIIP Project",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Install Backend Dependencies",
                "Install Frontend Dependencies"
            ],
            "group": "build",
            "detail": "Install all project dependencies"
        }
    ]
}